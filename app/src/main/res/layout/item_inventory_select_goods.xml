<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/background">

        <RelativeLayout
            android:id="@+id/contentLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/gray_corner8_bg"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_serial_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_alignParentStart="true"
                android:textColor="@color/black"
                android:textSize="14sp"
                tools:text="1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_good_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="12dp"
                android:layout_toStartOf="@+id/tv_good_state"
                android:layout_toEndOf="@id/tv_serial_number"
                android:maxLines="1"
                android:ellipsize="end"

                android:textColor="@color/black"
                android:textSize="14sp"
                tools:text="物品名称撒打算的阿斯达所多asd阿萨打死阿斯达所多asdasd" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_goods_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_good_name"
                android:layout_marginTop="13dp"
                android:singleLine="true"
                android:textColor="@color/color_999999"
                android:textSize="12sp"
                tools:text="@string/str_goods_details" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_goods_details"
                android:layout_alignParentEnd="true"
                android:singleLine="true"
                android:textColor="@color/color_999999"
                android:textSize="12sp"
                tools:text="@string/str_unit_price" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_good_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:maxLines="2"
                android:textColor="@color/main_blue"
                android:textSize="14sp"
                android:text="选择" />

        </RelativeLayout>

</LinearLayout>